{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2019",
		"module": "CommonJS",
		"lib": ["ES2019"],
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src", "types"]
}